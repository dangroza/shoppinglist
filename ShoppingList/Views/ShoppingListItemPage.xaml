<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ShoppingList.ShoppingListItemPage" Title="{Binding Name}">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Produs" />
        <Entry Text="{Binding Name}" />
        <Label Text="Descriere" />
        <Entry Text="{Binding Description}" />
        <Label Text="Cumparat" />
        <Switch IsToggled="{Binding Aquired}" />
        <Button Text="Adauga" Clicked="OnSaveClicked" />
        <Button Text="Sterge" Clicked="OnDeleteClicked" />
        <Button Text="Anuleaza" Clicked="OnCancelClicked" />
    </StackLayout>
</ContentPage>